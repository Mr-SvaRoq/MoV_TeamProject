<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dataModel"
            type="com.example.practice_demo.wall.data.model.PostItem"/>

        <variable
            name="pauseVisible"
            type="int" />

        <variable
            name="allowDelete"
            type="int"/>

        <variable
            name="index"
            type="int"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:id="@+id/parent"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/player_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:scaleType="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/delete_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="@{allowDelete}"
                    app:backgroundTint="@color/transparentWhite"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    android:contentDescription="@string/add_new_post"
                    android:focusable="true"
                    android:src="@drawable/outline_delete_black_18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/item_video_exoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:resize_mode="fixed_width"
                    app:surface_type="surface_view"
                    app:use_controller="false"
                    />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:alpha="0.5"
                    android:src="@drawable/pause"
                    android:contentDescription="@string/pause_image"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="24dp"
                    android:visibility="@{pauseVisible}"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="12"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@{dataModel.username}"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@{dataModel.formattedCreated}"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
